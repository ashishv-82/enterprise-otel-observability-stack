{
    "title": "Enterprise OTel Stack - Overview",
    "uid": "otel-stack-overview",
    "tags": [
        "fastapi",
        "otel"
    ],
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 36,
    "panels": [
        {
            "type": "stat",
            "title": "Simulated Active Users",
            "gridPos": {
                "h": 6,
                "w": 6,
                "x": 0,
                "y": 0
            },
            "id": 1,
            "datasource": {
                "type": "prometheus",
                "uid": "Prometheus"
            },
            "targets": [
                {
                    "expr": "active_simulated_users_ratio",
                    "refId": "A",
                    "instant": true
                }
            ],
            "options": {
                "reduceOptions": {
                    "calcs": [
                        "last"
                    ]
                },
                "colorMode": "value",
                "graphMode": "area"
            }
        },
        {
            "type": "timeseries",
            "title": "Total Request Rate (All endpoints)",
            "gridPos": {
                "h": 6,
                "w": 18,
                "x": 6,
                "y": 0
            },
            "id": 2,
            "datasource": {
                "type": "prometheus",
                "uid": "Prometheus"
            },
            "targets": [
                {
                    "expr": "sum(rate(http_request_count_total[$__rate_interval]))",
                    "legendFormat": "Requests / sec",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "custom": {
                        "fillOpacity": 15,
                        "lineWidth": 2
                    }
                }
            }
        },
        {
            "type": "logs",
            "title": "Application Logs (Loki)",
            "gridPos": {
                "h": 12,
                "w": 24,
                "x": 0,
                "y": 6
            },
            "id": 3,
            "datasource": {
                "type": "loki",
                "uid": "Loki"
            },
            "targets": [
                {
                    "expr": "{service_name=\"enterprise-api\"}",
                    "refId": "A"
                }
            ],
            "options": {
                "showTime": true,
                "showLabels": false,
                "showCommonLabels": false,
                "wrapLogMessage": true,
                "sortOrder": "Descending"
            }
        }
    ]
}