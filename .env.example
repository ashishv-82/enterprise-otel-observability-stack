# Copy this file to .env and fill in the values.
# Never commit .env — it is gitignored.

# ── App ─────────────────────────────────────────────────────────────────────
# Name of the service, used as a label on all telemetry signals
SERVICE_NAME=otel-demo-app
# OTel collector endpoint (Docker Compose service name)
OTEL_EXPORTER_OTLP_ENDPOINT=http://adot:4317
# OTel resource attributes applied to all signals
OTEL_RESOURCE_ATTRIBUTES=service.name=otel-demo-app,service.version=0.1.0,deployment.environment=local

# ── Prometheus ───────────────────────────────────────────────────────────────
PROMETHEUS_PORT=9090

# ── Loki ─────────────────────────────────────────────────────────────────────
LOKI_PORT=3100

# ── MinIO (local S3 for Loki) ─────────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_LOKI_BUCKET=loki-chunks

# ── X-Ray Daemon ──────────────────────────────────────────────────────────────
XRAY_PORT=2000

# ── Grafana ───────────────────────────────────────────────────────────────────
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ── Locust ────────────────────────────────────────────────────────────────────
LOCUST_HOST=http://app:8000
LOCUST_USERS=10
LOCUST_SPAWN_RATE=2

# ── AWS (Phase 2 only — not used in Phase 1) ─────────────────────────────────
